{
  "manifest_version": 3,
  "name": "Antigravity Observer",
  "version": "1.0",
  "description": "Monitorea y analiza el progreso de tus creaciones en local.",
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "nativeMessaging"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/logo.png"
  },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  }
}